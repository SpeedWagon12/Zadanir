<Window x:Class="Sasageo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sasageo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Введите число" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32"></TextBlock>
        <TextBox Name="Box1"  Grid.Column="1" Margin="0,48,0,28"></TextBox>




        <Button Name="Button1" Click="Button1_Click" Margin="72,32" Grid.Row="2" FontSize="32">Выполнить</Button>

        <TextBlock Grid.Column="1" Grid.Row="2" Name="Answer"  Margin="32"></TextBlock>

    </Grid>
</Window>
